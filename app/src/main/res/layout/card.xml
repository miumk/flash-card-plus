<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_item_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="▼意味を表示する"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/card_item_height"
                android:layout_height="@dimen/card_item_height"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/card_item_title_margin"
                    android:layout_weight="4"
                    android:text="Title Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/like_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/card_item_title_margin"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="0 Likes"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/like_button"
                    android:layout_width="@dimen/card_item_favorite_size"
                    android:layout_height="@dimen/card_item_favorite_size"
                    android:scaleType="centerInside"
                    android:src="@drawable/favorite" />


            </LinearLayout>

            <TextView
                android:id="@+id/content_textview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:text="Sample Text" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
